{{define "title"}}
{{.Category}} | {{.Config.Title}}
{{end}}

{{define "content"}}
<div class="container col-md-10 col-md-offset-1 col-lg-8 col-lg-offset-2">
  <h1>{{.Category}}</h1>
  <ul>
    {{range $_, $article := .Articles}}
    <li><a href="{{$article.Slug}}">{{$article.Title}}</a></li>
    {{end}}
  </ul>
</div>
{{end}}
